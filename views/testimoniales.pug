extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloqueTestimoniales.pug

        .row.justify-content-center
            h2.d-block.w-100.text-center Agrega un Testimonial
            .row.justify-content-center.col
                .col-md-8
                    if(errores)
                        each error in errores
                            .alert.alert-danger.text-center(role="alert") #{error.mensaje}
                    form(action="", method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", value= nombre, class="form-control")
                        .form-group
                            label(for="correo") Correo Electr√≥nico
                            input#correo(type="email", placeholder="Tu Correo", name="correo", value= correo, class="form-control")
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Tu Mensaje", name="mensaje", rows="3", class="form-control") #{mensaje}

                        input.btn.btn-success.btn-block(type="submit")